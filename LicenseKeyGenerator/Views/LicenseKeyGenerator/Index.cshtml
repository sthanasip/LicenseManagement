@model LicenseKeyModel

@{
    ViewData["Title"] = "License Key Generator";
}

<h1>Generate License Key Code</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="GenerateCode">
            <div class="form-group mt-1">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="NumberOfLicenses" class="control-label"></label>
                <input asp-for="NumberOfLicenses" class="form-control">
                <span asp-validation-for="NumberOfLicenses" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="LicenseEndDate" class="control-label"></label>
                <input asp-for="LicenseEndDate" class="form-control"/>
                <span asp-validation-for="LicenseEndDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" type="date" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Generate Key" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
